<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="3dp" android:top="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <solid android:color="#c0202020"/>
        </shape>
    </item>
    <item android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <stroke android:width="2dp" android:color="#202020"/>
            <gradient android:startColor="#f5f4f2" android:endColor="#c0bdb7" android:angle="270" android:type="linear"/>
            <padding android:left="16dp" android:top="8dp" android:right="16dp" android:bottom="8dp"/>
        </shape>
    </item>
</layer-list>
