<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:colopl="http://schemas.android.com/apk/res/REMOVED_APPID" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto" xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads" android:orientation="vertical" android:tag="agentMessageView" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/secondMainLayout" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <net.gogame.chat.RoundedImageView android:layout_gravity="center_horizontal" android:id="@+id/profileIcon" android:background="@drawable/net_gogame_chat_agent_profile_placeholder" android:padding="2dp" android:layout_width="55dp" android:layout_height="55dp" android:layout_marginRight="6dp" android:scaleType="centerCrop"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="70dp">
            <TextView android:textSize="18dp" android:textColor="#ff000000" android:gravity="left" android:autoLink="web" android:id="@+id/agentTextView" android:background="@drawable/net_gogame_chat_rounded_corner_for_agent" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <ImageView android:id="@+id/cellImageView" android:background="@drawable/net_gogame_chat_rounded_corner_for_agent" android:padding="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:contentDescription="@string/net_gogame_chat_attachment_thumbnail_description"/>
            <TextView android:textColor="#ff5e5d5d" android:id="@+id/agentName" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/optionsLinearLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="100dp" android:layout_marginTop="5dp"/>
</LinearLayout>
